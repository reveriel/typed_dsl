{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c",
                "dbg",
                "--spawn_strategy=local",
                "//:${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Current File",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c",
                "dbg",
                "--spawn_strategy=local",
                "//:${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
